{
	"name": "stylelint-gamut",
	"version": "1.3.2",
	"description": "Stylelint plugin for working with different color spaces",
	"main": "src/index.js",
	"scripts": {
		"format": "prettier --write",
		"lint": "eslint --fix",
		"test": "jest",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.js": "npm run lint",
		".": "npm run format"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fpetrakov/stylelint-gamut.git"
	},
	"files": [
		"src/**/*.js",
		"!**/**/*.test.js"
	],
	"keywords": [
		"stylelint",
		"stylelint-plugin",
		"gamut",
		"lch",
		"oklch",
		"lab",
		"oklab"
	],
	"author": "Fedya Petrakov",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/fpetrakov/stylelint-gamut/issues"
	},
	"homepage": "https://github.com/fpetrakov/stylelint-gamut#readme",
	"peerDependencies": {
		"stylelint": "^14.0.0 || ^15.0.0"
	},
	"devDependencies": {
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.2.4",
		"eslint-plugin-promise": "^6.0.0",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"jest-cli": "^28.1.3",
		"jest-preset-stylelint": "^5.0.4",
		"lint-staged": "^13.0.3",
		"prettier": "^2.8.8",
		"stylelint": "^14.10.0"
	},
	"dependencies": {
		"colorjs.io": "^0.4.0"
	}
}
